<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8EC9C">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="50dp"
        android:elevation="10dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/black"
                android:elevation="5dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/amatica_sc_bold"
                    android:gravity="center"
                    android:text="About Me"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold">

                </TextView>


            </androidx.cardview.widget.CardView>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="Interest-driven 17-year-old Tech Enthusiast with a hunger to learn about new technologies and different programming languages. My main aim in life is to build software/applications that help people make their lives easier just like a computer that has made our life so easy and comfortable."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="I have a passion for learning about technologies and programming languages."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="I started coding when I was in 5th when for the very first time I learnt about QBasic at school. Since then I have always wanted to learn more about programming and chose computer science as my optional subject in school. I learnt Java for 2 years in school but then after 10th, I changed my school to FIITJEE as I got a scholarship there. My biggest grievance was that I did not have Computers Science as a Subject there."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="I wanted to take this as a challenge and learn Computer Science on my own. Thanks to e-learning this was possible. I started by learning Python on UDEMY. It was rather easy for me to learn Python since I already knew Java and OOP. Then I did Harvard's CS50 Course on edX through which I learnt C. In June 2021 I started learning Android App Development using XML and Java. Currently, I am enrolled in a live Machine Learning Course powered by IIT Delhi."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="I am interested in AI with Machine Learning and I will specialize in it next year in college."
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="                     "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="                     "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/arsenal"
                        android:text="                     "
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>







</LinearLayout>